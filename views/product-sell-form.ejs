<!DOCTYPE html>
<html lang="en">

    <%- include ('./partials/head') %> 

<body>

    <%- include ('./partials/header') %>
     
    <!-- formulario venta de producto -->

    <form action="/products" method="POST">
        <div class="product-name">
            <label for="name" class="form-label">Nombre del producto:</label>
			<input type="text" id="name" name="name">
        </div>
        <div class="product-price">
            <label for="price" class="form-label">Precio del producto:</label>
			<input type="text" id="price" name="price">
        </div>
        <div class="product-category">
            <label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" >
							<option value="">Elegí</option>
							<option value="in-sale">Basado en tu última visita</option>
							<option value="visited">Ofertas</option>
						</select>
        </div>
        <div class="product-description">
            <label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description"></textarea>
        </div>
        <div class="product-image">
            <label for="product-image"></label>
						<div class="control">
							<input type="file" name="product-image" id="product-image">
        </div>
        <div class="submit-button">
            <button type="submit" class="buy-now-button">Publicar producto</button>
        </div>
    </form>

    <%- include ('./partials/footer') %> 

</body>
</html>