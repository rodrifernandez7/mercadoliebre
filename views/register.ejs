<!DOCTYPE html>
<html lang="en">

    <%- include ('./partials/head') %> 

<body>
    
    <%- include ('./partials/header') %> 

<!-- ACA ARRANCA EL FORMULARIO -->


<div class="todo-formulario">
    <form action="/users/register" method="POST" enctype="multipart/form-data" class="formulario">
        <div class="nombre-apellido">
            <label for="nombre"></label>
            <input type="text" name="name" id="name" placeholder="Nombre y apellido" value="<%= locals.oldData ? oldData.name : null %>" >
            <% if (locals.errors && errors.name) { %>
                <p><%= errors.name.msg %></p>
            <% } %>
        </div>
        <div class="nombre-usuario">
            <label for="nombreUsuario"></label>
            <input 
            type="text" 
            name="userName" 
            class="form-control <%= locals.errors && errors.userName ? 'is-invalid' : null %>"  
            value="<%= locals.oldData ? oldData.userName : null %>" 
            id = "userName" 
            placeholder="Nombre de usuario">
            <% if (locals.errors && errors.userName) { %>
                <%= errors.userName.msg %>
            <% } %>
        </div>
        <div class="email">
            <label for="email"></label>
            <input type="text" name="email" id="email" placeholder="Email" value="<%= locals.oldData ? oldData.email : null %>">
            <% if (locals.errors && errors.email) { %>
                <%= errors.email.msg %>
            <% } %>
        </div>
        <div class="fecha-nacimiento">
            <label for="fechaNacimiento" class="subtitulo-nacimiento"></label>Fecha de nacimiento</label>
            <div><input type="date" name="dateOfBirth" id="dateOfBirth" value="<%= locals.oldData ? oldData.dateOfBirth : null %>"></div>
            <% if (locals.errors && errors.dateOfBirth) { %>
                <%= errors.dateOfBirth.msg %>
            <% } %>
        </div>
        <div class="domicilio">
            <label for="domicilio"></label>
            <input type="text" name="adress" id="adress" placeholder="Domicilio" value="<%= locals.oldData ? oldData.adress : null %>">
            <% if (locals.errors && errors.adress) { %>
                <%= errors.adress.msg %>
            <% } %>
        </div>
        <div class="contraseña">
            <label for="password"></label>
            <input type="password" name="password" placeholder="Contraseña">
            <% if (locals.errors && errors.password) { %>
                <%= errors.password.msg %>
            <% } %>
        </div>
        <div class="confir-password">
            <label for="password"></label>
            <input type="password" name="confirmPassword" placeholder="Confirmar contraseña">
            <% if (locals.errors && errors.confirmPassword) { %>
                <%= errors.confirmPassword.msg %>
            <% } %>
        </div>
        <div class="perfil-usuario">
            <label for="perfilUsuario" class="subtitulos">Perfil del usuario:</label>
            <div>
               
            <input type="radio" name="user-buyer" id="user-buyer">
            <label for="comprador">Comprador</label>
            
            <input type="radio" name="user-seller" id="user-seller">
            <label for="Vendedor">Vendedor</label> 
            </div>
        </div>
        <div class="foto-perfil">
            <label for="fotoPerfil" class="subtitulos">Foto de usuario</label>
            <input type="file" name="avatar">
            <% if (locals.errors && errors.avatar) { %>
                <%= errors.avatar.msg %>
            <% } %>
        </div>
        <div class="intereses">
            <label for="categoriaInteres" class="subtitulo-interes">Selecciona interés: </label>
            
            <div class="categorias">
                <input type="checkbox" name="electro" value="electro">
                <label for="electro" class="subtitulos">Electro</label>
            </div>
                
            <div class="categorias">
        
                <input type="checkbox" name="moda" value="moda">
                <label for="electro" class="subtitulos">Moda</label>
            </div>
        
            <div class="categorias">
        
                <input type="checkbox" name="hogar" value="hogar">
                <label for="hogar" class="subtitulos">Hogar</label>
            </div>
            <div class="categorias">
                <input type="checkbox" name="jugueteria" value="jugueteria">
                <label for="jugueteria" class="subtitulos">Jugueteria</label>
            </div>
            <div class="categorias">
        
                <input type="checkbox" name="vida-sana" value="vida-sana">
                <label for="vida-sana" class="subtitulos">Vida Sana</label>
            </div>
        </div>  
        <div class="button-enviar-borrar">
            <div class="button-borrar">
                <button type="reset" class="button-form-register">Borrar</button>
            </div>
            <div class="button-enviar">
                <button type="submit" class="button-form-register"><!-- <a href="/"> -->Enviar<!-- </a> --></button>
            </div>
        </div> 
        </form>
</div>

<!-- TERMINA FORMULARIO -->

<%- include ('./partials/footer') %>